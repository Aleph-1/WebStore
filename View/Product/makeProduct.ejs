

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" href="../LoginPage/loginPage.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</head>

<body>
    <div id="template1" class="header">
        <%- include ('../HomePage/HomePage.ejs') %>
    </div>


   <form method="post">
    <table class="container form-box">
        <tr>
            <td></td>
            <td><h3 style="margin-top: 6rem;">Make A Product!</h3></td>
        </tr>

        <tr>
            <td>Title:</td>
            <td>
                <input type="text" placeholder="Enter Title:" name="title">
            </td>
        </tr>

        <tr>
            <td>Price:</td>
            <td>
                <input type="text" placeholder="Enter Price" name="price">
            </td>

        </tr>

        <tr>
            <td>Description:</td>
            <td>
                <input type="text" placeholder="Enter Description" name="Description">
            </td>

        </tr>

        <tr>
            <td>Short Description:</td>
            <td>
                <input type="text" placeholder="Enter Short Description" name="shortDescription">
            </td>

        </tr>
        
        <tr>
            <td>Amount Available:</td>
            <td>
                <input type="text" placeholder="Enter Amount Available" name="amountAvailable">
            </td>

        </tr>

        <tr>
            <td>Pictures</td>
            <td>
                <input type="text" placeholder="links seperated by space" name="pictures">
            </td>

        </tr>

        <tr>
            <td>Sizes</td>
            <td>
                <input type="text" placeholder="sizes seperated by space" name="Sizes">
            </td>

        </tr>

        <tr>
            <td>Tags:</td>
            <td>  <div class="form-check">
                <input style="width: 1rem;" class="form-check-input" type="radio" name="sports" id="flexRadioDefault1" onclick="checkSprots()" >
                <label class="form-check-label" for="flexRadioDefault1">
                  sports
                </label>
              </div>
              <div class="form-check">
                <input style="width: 1rem;" class="form-check-input" type="radio" name="clothes" id="flexRadioDefault2" onclick="checkClothes()" >
                <label class="form-check-label" for="flexRadioDefault2">
                  clothes
                </label>
              </div>
              <div class="form-check">
                <input style="width: 1rem;" class="form-check-input" type="radio" name="home" id="flexRadioDefault3" onclick="checkHome()" >
                <label class="form-check-label" for="flexRadioDefault3">
                  home
                </label>
              </div>
              <div class="form-check">
                <input style="width: 1rem;" class="form-check-input" type="radio" name="kids" id="flexRadioDefault4" onclick="checkKids()" >
                <label class="form-check-label" for="flexRadioDefault4">
                  kids
                </label>
              </div>
              <div class="form-check">
                <input style="width: 1rem;" class="form-check-input" type="radio" name="technology" id="flexRadioDefault5" onclick="checkTechnology()" >
                <label class="form-check-label" for="flexRadioDefault5">
                  technology
                </label>
              </div>
            </td>

        </tr>
        <tr>
            <td></td>
            <td>
                <button style="width: 20rem;" class="btn btn-primary" type="submit">Submit</button>
            </td>
        </tr>
    </table>


   </form>
   <footer id="footer-place"></footer>
    <%- include ('../TemplatePage/Footer.ejs') %>


    <script>
        window.onload = function() {
            var footer = document.querySelector('.theFoot');
            var placeholder = document.querySelector('#footer-place');
            placeholder.parentNode.insertBefore(footer, placeholder.nextSibling);
        }
    </script>

   <script>
    let sports = false,clothes = false,home = false,kids = false,technology = false;

function checkSprots(){
    if(sports == true){
        document.getElementById("flexRadioDefault1").checked = false;
    }else{
        document.getElementById("flexRadioDefault1").checked = true;
    }
    sports = !sports;
}
function checkClothes(){
    if(clothes == true){
        document.getElementById("flexRadioDefault2").checked = false;
    }else{
        document.getElementById("flexRadioDefault2").checked = true;
    }
    clothes = !clothes;
}
function checkHome(){
    if(home == true){
        document.getElementById("flexRadioDefault3").checked = false;
    }else{
        document.getElementById("flexRadioDefault3").checked = true;
    }
    home = !home;
}
function checkKids(){
    if(kids == true){
        document.getElementById("flexRadioDefault4").checked = false;
    }else{
        document.getElementById("flexRadioDefault4").checked = true;
    }
    kids = !kids;
}
function checkTechnology(){
    if(technology == true){
        document.getElementById("flexRadioDefault5").checked = false;
    }else{
        document.getElementById("flexRadioDefault5").checked = true;
    }
    technology = !technology;
}
    </script>

</body>


</html>