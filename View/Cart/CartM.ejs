<html>
    <head>
        <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <link href="../Cart/CartD.css" rel="stylesheet">
        <script src="../Cart/CartF.js"></script>
    </head>
    <body>
        <form method="post" action="http://localhost:8080//HomePage">
            <div class="container-fluid banner">
                <div class="row">
                    <div class="col-md-12">
                        <nav class="navbar">
                            <div class="navbar-brand">Mavoch</div>
                            <ul class="nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Store</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Info</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Cart</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">GiftCards</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Sign In</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-md-6 offset-md-3 info text-center cart">
                        <h1>Shopping Cart</h1>
                        <table class="table">
                            <thead>
                              <tr>
                                <th scope="col">Picture</th>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">Amount Available</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Remove</th>
                                <th scope="col">Price</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% for (pro of finalProducts) { %>
                                    <tr id="<%= pro._id %>">

                                        <td><img src="<%= pro.Pictures[0] %>" style="width: 300px; height: 200px;"></td>
                                        <td><%= pro.Title %></td>
                                        <td><%= pro.Description %></td>
                                        <td><%= pro.AmountAvailable %></td>
                                        <td>
                                            <button type="button" class="btn btn-light" data-id="<%= pro._id +1 %> <%= pro._id +2%>" onclick="decrease(event)">-</button>
                                            
                                            <input type="text" value="1" id="<%= pro._id +1 %>" disabled="disabled" class="change"/>

                                            <button type="button" class="btn btn-light" data-id="<%= pro._id +1 %> <%= pro._id +2%>" onclick="increase(event)">+</button>
                                        </td>
                                        <td><button type="button" class="btn btn-danger" data-id="<%= pro._id %>"  onclick="remove(event)">Remove</button></td>
                                        <td>
                                            <strong> 
                                                $ <input type="text" value="<%= pro.price %>" id="<%= pro._id +2%>" disabled="disabled" class="change"/> 
                                            </strong>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </body>
</html>