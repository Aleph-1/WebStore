
<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    
</head>

<body>

    <div class="col-md-12">
        <div id="template1" class="header">
            <%- include ('../HomePage/HomePage.ejs') %>
        </div>
    </div>


    <h3>Update Customer For <%=customer.Name%></h3>

   <form method="post">

    <table>

        <tr>
            <td>First Name:</td>
            <td>
                
                <input type="text" placeholder=<%=customer.Name%> name="firstName">
            </td>
        </tr>

        <tr>
            <td>Last Name:</td>
            <td>
                <input type="text" placeholder=<%=customer.lastName%> name="lastName">
            </td>

        </tr>

        <tr>
            <td>Address:</td>
            <td>
                <input type="text" placeholder=<%=customer.address%> name="address">
            </td>

        </tr>

        <tr>
            <td>Email:</td>
            <td>
                <input type="text" placeholder=<%=customer.email%> name="email">
            </td>

        </tr>

        <tr>
            <td>Credit cards:</td>
            <td>
                <input type="text" placeholder="12345678" name="Credit cards">
            </td>

        </tr>

        <tr>
            <td>Password:</td>
            <td>
                <input type="text" placeholder="********" name="password">
            </td>

        </tr>
        
        <tr>
            <td>Cart:</td>
            <td>
                <input type="text" placeholder="<%=customer.shoppingCart%>" name="shoppingCart">
            </td>

        </tr>

    


    </table>


    <button type="submit">Submit</button>
   </form>
   <footer id="footer-place"></footer>
    <%- include ('../TemplatePage/Footer.ejs') %>


    <script>
        window.onload = function() {
            var footer = document.querySelector('.theFoot');
            var placeholder = document.querySelector('#footer-place');
            placeholder.parentNode.insertBefore(footer, placeholder.nextSibling);
        }
    </script>

</body>


</html>