<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <meta http-equiv='X-UA-Compatible' content='IE=edge'>
        
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        
        <link rel="stylesheet" href="../StorePage/StorePage.css">
    </head>

    <body> 
        <div class="background"></div>
        <form method="post" class="posty" action="">
            <div class="container-fluid banner">
                <div class="row ally">
                    
                    <div class="col-md-12">
                        <div id="template1" class="header">
                            <%- include ('../HomePage/HomePage.ejs') %>
                        </div>
                    </div>
                    <div class="col-md-6 offset-md-3 info" style="padding-top: 8%;">
                        <aside>
                        <input style="margin-left: 4rem;" type="text"  name="search" placeholder="Filter product by name">
                            <div style="display: flex;">
                            <div style="margin-left: 4rem;" class="form-check">
                                <input style="width: 1rem;" class="form-check-input" type="radio" name="sports" id="flexRadioDefault1" onclick="checkSprots()">
                                <label class="form-check-label" for="flexRadioDefault1">
                                  sports
                                </label>
                              </div>
                              <div class="form-check">
                                <input style="width: 1rem;" class="form-check-input" type="radio" name="clothes" id="flexRadioDefault2" onclick="checkClothes()" >
                                <label class="form-check-label" for="flexRadioDefault2">
                                  clothes
                                </label>
                              </div>
                              <div class="form-check">
                                <input style="width: 1rem;" class="form-check-input" type="radio" name="home" id="flexRadioDefault3" onclick="checkHome()" >
                                <label class="form-check-label" for="flexRadioDefault3">
                                  home
                                </label>
                              </div>
                              <div class="form-check">
                                <input style="width: 1rem;" class="form-check-input" type="radio" name="kids" id="flexRadioDefault4" onclick="checkKids()" >
                                <label class="form-check-label" for="flexRadioDefault4">
                                  kids
                                </label>
                              </div>
                              <div class="form-check">
                                <input style="width: 1rem;" class="form-check-input" type="radio" name="technology" id="flexRadioDefault5" onclick="checkTechnology()" >
                                <label class="form-check-label" for="flexRadioDefault5">
                                  technology
                                </label>
                              </div>
                              <button type="submit" style="margin: 1rem;" class="btn btn-primary">Filter</button>
                            </div>
                    </aside>
                        <div class="gallery">
                            <% for (p of products) { %>
                                
                                <div id="<%= p._id %>" class="content">
                                    <img id="mainpic" src ="<%= p.Pictures[0]%>" style="height: 15rem; width: 100%; max-height:100%">
                                    <h3><%= p.Title %></h3>
                                    <p><%= p.shortDescription %></p>
                                    <h6><%= p.price %>$</h6>
                                    <ul>
                                        <% if(p.Rating!=0) { %>
                                            <% for (let i=0;i!=p.Rating;i++){ %>
                                                <li><i class="fa fa-star checked"></i></li>
                                            <%}%>
                                            <% for (let i=0;i!=5-p.Rating;i++){ %>
                                                <li><i class="fa fa-star"></i></li>
                                            <%}%>
                                        <%}%>
                                    </ul>
                                    <a href="/prPage/<%= p._id %>" class="buy btn">View</a>
                                    <%if(type == "admin"){%>
                                        <a onclick="deleteProduct('<%=p._id%>')" class="buy btn">delete</a><!--href="/products/deleteforsup/<%=p._id%>"-->
                                    <%}%>
                                </div>
                            <%}%>
                        </div>
                    </div>

                    <footer id="footer-place"></footer>
                    <%- include ('../TemplatePage/Footer.ejs') %>


                    <script>
                        window.onload = function() {
                          var footer = document.querySelector('.theFoot');
                          var placeholder = document.querySelector('#footer-place');
                          placeholder.parentNode.insertBefore(footer, placeholder.nextSibling);
                         
                        }
                    </script>   
                </div>
            </div>
        </form>
        

        

    </body>

    <script>
        function deleteProduct(id){
            fetch('/products/deleteforsup/'+id);
            document.getElementById(id).hidden = true;
            //$("#id").empty();
        }





let sports = false,clothes = false,home = false,kids = false,technology = false;

        function checkSprots(){
            if(sports == true){
                document.getElementById("flexRadioDefault1").checked = false;
            }else{
                document.getElementById("flexRadioDefault1").checked = true;
            }
            sports = !sports;
    }
    function checkClothes(){
            if(clothes == true){
                document.getElementById("flexRadioDefault2").checked = false;
            }else{
                document.getElementById("flexRadioDefault2").checked = true;
            }
            clothes = !clothes;
    }
    function checkHome(){
            if(home == true){
                document.getElementById("flexRadioDefault3").checked = false;
            }else{
                document.getElementById("flexRadioDefault3").checked = true;
            }
            home = !home;
    }
    function checkKids(){
            if(kids == true){
                document.getElementById("flexRadioDefault4").checked = false;
            }else{
                document.getElementById("flexRadioDefault4").checked = true;
            }
            kids = !kids;
    }
    function checkTechnology(){
            if(technology == true){
                document.getElementById("flexRadioDefault5").checked = false;
            }else{
                document.getElementById("flexRadioDefault5").checked = true;
            }
            technology = !technology;
    }
    </script>

</html>