<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <meta http-equiv='X-UA-Compatible' content='IE=edge'>
        
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <script src="/GiftCards//CardPaid.js"></script>
        <link rel="stylesheet" href="../../GiftCards/CardPaid.css">
    </head>

    <body> 
        
        <div class="background"></div>
        <form method="">
            <div class="container-fluid banner">
                <div class="row ally">
                    
                    <div class="col-md-12">
                        <div id="template1" class="header">
                            <%- include ('../HomePage/HomePage.ejs') %>
                        </div>
                    </div>
                    <div class="col-md-6 offset-md-3 info" style="padding-top: 8%;">
                        <div class="gallery">
                            <div id="reveal">
                                <a class="btn-danger btn" onclick="func()">Complete Payment And Reveal Code</a>
                            </div>
                            
                            
                            <div class="hide" id="hidden">
                                <% if(card!=null) { %>
                                    <h2><%= card._id %></h2>
                                    <h2>This is your code: Keep It Safe</h2>
                                    <a class="btn-danger btn" href="/homePage">Back To HomePage</a>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <footer id="footer-place"></footer>
                    <%- include ('../TemplatePage/Footer.ejs') %>


                    <script>
                        window.onload = function() {
                            var footer = document.querySelector('.theFoot');
                            var placeholder = document.querySelector('#footer-place');
                            placeholder.parentNode.insertBefore(footer, placeholder.nextSibling);
                        }
                    </script>
                    
                </div>
            </div>
        </form>
        

        
        
    </body>


</html>